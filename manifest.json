{
  "manifest_version": 2,

  "name": "BigFunBox Local Site Notes",
  "description": "This extension will allow you to create local notes for sites you build or visit and access BigFunBox Solutions Media.",
  "version": "1.0.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon.png",
    "128": "icon-128.png"
  },

  "permissions": ["storage", "tabs", "activeTab"]
}
